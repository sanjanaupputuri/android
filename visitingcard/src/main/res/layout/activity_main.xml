<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="8dp"
        android:elevation="4dp"
    android:layout_gravity="center">

    <!-- Name Section with Band -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A6D4A"
    android:padding="12dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanjana Upputuri"
        android:fontFamily="@font/italic_custom"
        android:textStyle="italic"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.05"
        android:fontWeight="600"/>
</LinearLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E9F1E9"
            android:padding="14dp">

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Title&#10;Company Name"
                android:textSize="16sp"
                android:textColor="#2D3E2F"
                android:lineSpacingExtra="4dp"
                android:fontWeight="500"/>
        </LinearLayout>

        <!-- Green divider line OUTSIDE details, ABOVE contact -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#4A6D4A"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" />

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E9F1E9"
            android:padding="14dp">

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ph: 9876543210"
                android:textSize="16sp"
                android:textColor="#2D3E2F"
                android:fontWeight="500"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: example@mail.com"
                android:textSize="16sp"
                android:textColor="#2D3E2F"
                android:fontWeight="500"/>
        </LinearLayout>

    </LinearLayout>
    </FrameLayout>
